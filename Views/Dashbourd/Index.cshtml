<script>
    $(document).ready(function () {
     
        $.ajax({
            url: '/Dashbourd/numberOfUsers',
            //contentType: 'application/html; charset=utf-8',
            type: 'GET',
            dataType: 'json'
            , success: function (result) {
                $('#numofcustomer').html(result);
                console.log(result);
            },
            error: function (xhr, status) {
                alert(status);
            }
        });
        $.ajax({
            url: '/Dashbourd/numOfProducts',
            //contentType: 'application/html; charset=utf-8',
