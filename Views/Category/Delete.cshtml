@model ecommerce.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "_DashbourdLayout";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>

<div class="card container" style="width: 18rem;">
    <img class="card-img-top" src="@Model.ImageUrl" alt="@Model.Name">
    <div class="card-body">
        <h5 class="card-title">@Model.Name Category</h5>
        <p class="card-text">@Model.Description</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Products Number: @if (Model.Products != null) { Model.Products.Count(); } 0</li>
    </ul>
    <div class="card-body">
        <a asp-action="Delete" asp-controller="Category" class="card-link">Delete</a>
        <a asp-action="GetAll" asp-controller="Category" class="card-link">Cancel</a>
    </div>
</div>

