@model ecommerce.Models.CartItem

@{
    ViewData["Title"] = "Update";
}

<main class="container">

    <h2 style="margin-top: 24px; margin-bottom: 24px;">Update</h2>

    <h4>CartItem</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Update">
                <div asp-validation-summary="All" class="text-danger"></div>
