@model ecommerce.Models.Order

@{
    ViewData["Title"] = "Update";
    Layout = "_DashbourdLayout";

    var statuses = new List<SelectListItem>
    {
        new SelectListItem { Value = "PENDING", Text = "Pending" },
        new SelectListItem { Value = "DISPATCHED", Text = "Dispatched" },
        new SelectListItem { Value = "DELIVERED", Text = "Delivered" }
    };

    ViewBag.StatusList = new SelectList(statuses, "Value", "Text", Model.Status);

}

<div class="container">
    
    <div class=" text-center mt-5 ">

        <h1>Update Order</h1>


    </div>


    <div class="row ">
        <div class="col-lg-7 mx-auto">
            <div class="card mt-2 mx-auto p-4 bg-light">
                <div class="card-body bg-light">

                    <div class="container">
                        <form id="contact-form" role="form" asp-action="Update" asp-controller="Order">
                            <div class="controls">
                                <div class="row my-2">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="OrderDate" class="control-label"></label>
                                            <input asp-for="OrderDate" class="form-control" readonly />
                                            <span asp-validation-for="OrderDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Status" class="control-label">@Model.Status</label>
                                            <select asp-for="Status" class="form-control"
                                                asp-items="ViewBag.StatusList">
                                                <option value="">--Select Status--</option>
                                            </select>
                                            <span asp-validation-for="Status" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group text-center my-5">
                                            <input type="submit" value="Update Order" class="btn btn-primary btn-send  pt-2 btn-block" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="col-md-12 text-center">

                    <a asp-action="Index" class="pt-2 btn-block">Back to List</a>
                </div>
            </div>
            <!-- /.8 -->

        </div>
        <!-- /.row-->

    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<style>
    h1 {
        margin-bottom: 40px;
    }

    label {
        color: #333;
    }

    .btn-send {
        font-weight: 300;
        text-transform: uppercase;
        letter-spacing: 0.2em;
        width: 80%;
        margin-left: 3px;
    }

    .help-block.with-errors {
        color: #ff5050;
        margin-top: 5px;
    }

    .card {
        margin-left: 10px;
        margin-right: 10px;
    }
</style>
