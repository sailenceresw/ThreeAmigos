@model ecommerce.ViewModels.Product.ProductWithListOfCatesViewModel

@{
    ViewData["Title"] = "Insert";
    Layout = "_DashbourdLayout";
    SelectList catItem =
    new SelectList(Model.categories, "Id", "Name");

    SelectList supplierItem = new SelectList(Model.suppliers, "Id", "UserName");
}





<div class="container">

    <div class=" text-center mt-5 ">

        <h1>Add New Product</h1>


    </div>


    <div class="row ">
        <div class="col-lg-9 mx-auto">
            <div class="card mt-2 mx-auto p-4 bg-light">
                <div class="card-body bg-light">

                    <div class="container">
                        <form id="contact-form" role="form" asp-action="insert" asp-controller="product"
                            enctype="multipart/form-data">

                            <div class="controls">
                                <div class="row">
                                    <div class="col-md-6 my-3">
                                        <div class="form-group">
                                            <label asp-for="Name" class="control-label"></label>
                                            <input asp-for="Name" class="form-control" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 my-3">
                                        <div class="form-group">
                                            <label asp-for="image" class="control-label">Image</label>
                                            <input type="file" asp-for="image" />
                                            <span asp-validation-for="image" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 my-3">
                                        <div class="form-group">
                                            <label asp-for="Price" class="control-label"></label>
                                            <input asp-for="Price" class="form-control" />
                                            <span asp-validation-for="Price" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 my-3">
                                        <div class="form-group">
                                            <label asp-for="Color" class="control-label"></label>
                                            <input asp-for="Color" class="form-control" />
                                            <span asp-validation-for="Color" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 my-3">
                                        <div class="form-group">
                                            <label for="form_need">Please select Category *</label>
                                            <select id="form_need" asp-for="CategoryId" asp-items="catItem"
                                                class="form-control" required="required"
                                                data-error="Please specify your need.">
                                                <option value="0" selected disabled>--Select Category--</option>
                                            </select>

                                        </div>
                                    </div>
                                    <div class="col-md-6 my-3">
                                        <div class="form-group">
                                            <label for="form_need">Please select Supplier *</label>
                                            <select id="form_need" asp-for="SupplierId" asp-items="supplierItem"
                                                class="form-control" required="required"
                                                data-error="Please specify your need.">
                                                <option value="" selected disabled>--Select Supplier--</option>
                                            </select>

                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="Description" class="control-label"></label>
                                            <input asp-for="Description" class="form-control" />
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-12 my-3">
                                        <div class="form-group mt-2">
                                            <label asp-for="Quantity" class="control-label">Add Stock</label>
                                            <input asp-for="Quantity" class="form-control" />
                                            <span asp-validation-for="Quantity" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="col-md-12 text-center my-2">

                                        <input type="submit" value="Create"
                                            class="btn btn-success btn-send  pt-2 btn-block" />

                                    </div>

                                </div>


                            </div>
                        </form>
                        <div class="text-center my-3">
                            <a asp-action="products" asp-controller="dashbourd" class="">Back to List</a>
                        </div>
                    </div>
                </div>


            </div>
            <!-- /.8 -->

        </div>
        <!-- /.row-->

    </div>
</div>
<style>
    h1 {
        margin-bottom: 40px;
    }

    label {
        color: #333;
    }

    .btn-send {
        font-weight: 300;
        text-transform: uppercase;
        letter-spacing: 0.2em;
        width: 80%;
        margin-left: 3px;
    }

    .help-block.with-errors {
        color: #ff5050;
        margin-top: 5px;
    }

    .card {
        margin-left: 10px;
        margin-right: 10px;
    }
</style>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
